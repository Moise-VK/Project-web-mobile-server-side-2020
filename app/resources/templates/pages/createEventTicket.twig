{% extends 'pages/layout.twig' %}

{% block pageContent %}
<main id="main">
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Ticket aanmaken</h2>
                <ol>
                    <li><a href="home">Home</a></li>
                    <li>Evenementen</li>
                    <li>Ticket aanmaken</li>
                </ol>
            </div>
        </div>
    </section>
    <section>
        <div class="container">
            <!-- CENTER THIS RADIOBUTTON THING -->
            <div class="d-flex">
                <div>
                    <input type="radio" id="existing" name="typeEvent" value="existing">
                    <label for="existing"> Bestaand evenement</label>
                </div>

                <div class="ml-5">
                    <input type="radio" id="new" name="typeEvent" value="new">
                    <label for="new"> Nieuw evenement</label>
                </div>
            </div>

            <div id="existingEvent"  style="display: block;">
                <p>Existing Event</p>
                {% include 'layout/parts/existingEvent.twig' %}
            </div>

            <div id="newEvent"  style="display: none;">
                <p>New Event</p>
                {% include 'layout/parts/newEvent.twig' %}
            </div>

        </div>
    </section>
</main>
    <script src="/assets/js/newTicket.js"></script>
{% endblock %}