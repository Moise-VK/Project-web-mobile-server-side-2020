{% extends 'pages/layout.twig' %}

{% block pageContent %}

    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Contact</h2>
                <ol>
                    <li><a href="home">Home</a></li>
                    <li>Checkout</li>
                </ol>
            </div>

        </div>
    </section>

    <section>
        <div class="row">
            <div class="col-sm-2"></div>
            {% if (personalDetails == true) and (paymentDetails == true) %}
                <div class="col-sm-5">
                    {% include 'layout/parts/checkout/thankYouNote.twig' %}
                </div>
            {% else %}
                <div class="col-sm-5">
                    {% if personalDetails == false %}
                        {% include 'layout/parts/checkout/personalDetails.twig' %}
                    {% else %}
                        {% include 'layout/parts/checkout/financialInformation.twig' %}
                    {% endif %}
                </div>
                <div class="col-sm-4">
                    <h4>Winkelmandje</h4>
                    {% include 'layout/parts/checkout/shoppingCart.twig' %}
                </div>
            {% endif %}

            <div class="col-sm-2"></div>

        </div>
    </section>

    <script src="/assets/js/checkoutFunctional.js"></script>
{% endblock %}