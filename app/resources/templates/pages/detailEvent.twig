{% extends 'pages/layout.twig' %}

{% block pageContent %}
    <main id="main">

        <!-- ======= Breadcrumbs Section ======= -->
        <section class="breadcrumbs">
            <div class="container">
                <div class="d-flex justify-content-between align-items-center">
                    <h2>{{ event.getName }}</h2>
                    <ol>
                        <li><a href="home">Home</a></li>
                        <li>{{ event.getName }}</li>
                    </ol>
                </div>
            </div>
        </section><!-- End Breadcrumbs Section -->
        <div class="container">
            <section>
                <div>
                    <a href="/events" class="btn btn-success mb-3"><- Go Back</a>
                </div>
                <article>
                    <div class="inline">
                        <img class="img-detail" src="../assets/img/{{ event.getId() }}.jpg" alt="{{ event.getId() }}"
                             title="{{ event.getId() }}"/>
                    </div>
                    <div class="detail-info">
                        <ul class="event-info">
                            <li><b>originele prijs</b>: € {{ event.getPrice() }}</li>
                            <br>
                            <li><b>Start</b>: {{ event.getStartDate() }}</li>
                            <br>
                            <li><b>Einde</b>: {{ event.getEndDate() }}</li>
                            <br>
                            <li><b>Locatie</b>: {{ event.getLocation() }}</li>
                            <br>
                            <iframe width="300" height="220" frameborder="0" scrolling="no" marginheight="0"
                                    marginwidth="0"
                                    src="https://maps.google.it/maps?q={{ event.getLocation }}&output=embed"></iframe>
                            <br>
                        </ul>
                    </div>
                    <div class="descr">
                        <p><b>Description</b>: {{ event.getDescription }}</p>
                    </div>
                </article>
            </section>
            <hr>
            <div class="row">
                <section class="col-lg-10">
                    <h3>Beschikbare tickets</h3>
                    {% if tickets|length !=  0 %}
                        {% for ticket in tickets %}
                            <article class="card mt-4">
                                <div class="card-header">
                                    <h4 class="title">{{ ticket.getName() }}</h4>
                                </div>
                                <div class="card-body d-flex">
                                    <ul class="list-unstyled">
                                        <li><h5>{{ ticket.getName() }}</h5></li>
                                        <li>Prijs: €{{ ticket.getPrice() }}</li>
                                        <li>Type ticket: {{ ticket.getTicketType() }}</li>
                                        <li>Verkoper: {{ ticket.getSellerName() }}</li>
                                        <li class="form-group">Reden van verkoop: {{ ticket.getReason() }}</li>
                                        <li><div onclick="addToCart({{ ticket.getId() }})" class="btn btn-success">In winkelwagen</div></li>
                                    </ul>
                                </div>
                            </article>
                        {% endfor %}
                    {% else %}
                        <article class="6u 12u$(xsmall) work-item" style="height: 25em;">
                            <p class="noevent">Geen tickets gevonden voor dit evenement</p>
                        </article>
                    {% endif %}
                </section>
            </div>
        </div>
    </main><!-- End #main -->

{% endblock %}