{% extends 'pages/layout.twig' %}

{% block pageContent %}
    <main id="main">

        <!-- ======= Breadcrumbs Section ======= -->
        <section class="breadcrumbs">
            <div class="container">

                <div class="d-flex justify-content-between align-items-center">
                    {% if events|length !=  0 %}
                    {% for event in events %}
                    <h2>{{ event.getName }}</h2>
                    <ol>
                        <li><a href="home">Home</a></li>
                                <li>{{ event.getName }}</li>
                            {% endfor %}
                        {% else %}
                            <li>Geen evenement gevonden</li>
                        {% endif %}
                    </ol>
                </div>

            </div>
        </section><!-- End Breadcrumbs Section -->
        <div class="container">
            <section>
                {% if events|length !=  0 %}
                    {% for event in events %}
                        <article>
                                <div class="inline">
                                    <img class="img-detail" src="../assets/img/{{ event.getId() }}.jpg" alt="{{ event.getId() }}" title="{{ event.getId() }}" />
                                </div>
                                <div class="detail-info">
                                    <ul class="event-info">
                                        <li><b>Price</b>: â‚¬ {{event.getPrice()}}</li><br>
                                        <li><b>Start</b>: {{ event.getStartDate() }}</li><br>
                                        <li><b>End</b>: {{ event.getEndDate() }}</li><br>
                                        <li><b>Location</b>: {{ event.getLocation() }}</li><br>
                                        <iframe width="300" height="220" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.it/maps?q={{event.getLocation}}&output=embed"></iframe><br>
                                    </ul>
                                </div>
                            <div class="descr">
                                <p><b>Description</b>: {{ event.getDescription }}</p>
                            </div>
                            <a class="btn btn-success" href="/tickets?id={{ event.getId() }}">Tickets for this event</a>
                        </article>
                    {% endfor %}
                {% else %}
                    <article class="6u 12u$(xsmall) work-item"  style="height: 25em;">
                        <p class="noevent">Geen evenementen gevonden</p>
                    </article>
                {% endif %}
            </section>
        </div>
    </main><!-- End #main -->

{% endblock %}